<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FramilyProfile"
    android:background="@drawable/background">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:id="@+id/back"
        android:text="@string/back"
        android:background="@android:color/transparent"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/photo"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/back"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/_pic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:id="@+id/edit"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/back"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/name_age_relation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/photo">

        <LinearLayout
            android:id="@+id/name_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="Name"
                android:textAlignment="textEnd"
                android:textColor="@color/blue2"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="age"
                android:textSize="16dp" />


        </LinearLayout>
        <TextView
            android:id="@+id/relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="relationship"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/quiz"
        android:layout_width="380dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
        android:layout_below="@id/name_age_relation"
        android:background="@drawable/quiz_button1"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Quiz Me"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/quiz">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/location_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/location_icon" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/birthday_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/birthday_icon" />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/phone_icon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/phone_icon" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/location_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/blue1"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="18dp"
        android:id="@+id/birthday_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textColor="@color/blue1"
        android:textSize="18dp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/contact1_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_weight="8"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/call"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="Call"
            android:layout_weight="1"
            android:background="@drawable/save_button"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18dp"/>

    </LinearLayout>



    <TextView
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="phone number"
        android:textColor="@color/blue1"
        android:textSize="18dp"
        android:textStyle="bold" />
    </LinearLayout>

    </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memories"
        android:text="Memories"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/information"
        android:textSize="20dp"/>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:columnWidth="100dp"
        android:numColumns="3"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="0dp"
        android:layout_below="@id/memories"
        />




</RelativeLayout>
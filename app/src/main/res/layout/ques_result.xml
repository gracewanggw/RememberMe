<?xml version="1.0" encoding="utf-8"?>
<com.example.rememberme.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/ques"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#666"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/realans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/yourans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:textStyle="italic"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checked"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:scaleX="1.70"
        android:scaleY="1.70"
        android:buttonTint="@color/blue1"
        />


</com.example.rememberme.CheckableLinearLayout>